<%= simple_form_for :query, url: profiles_path, method: :get do |f| %>
  <div class="search-form-control form-group" data-controller="refresh-list">
    <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Find a loanee" data-refresh-list-target="searchInput" data-action="keyup->refresh-list#update"/>
    <button name="button" type="submit" class="btn btn-search">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col">
      <div data-controller="refresh-list">
        <%= form_with url: profiles_path, method: :get, html: { class: 'mb-5', data: { refresh_list_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                     class: "form-control",
                     placeholder: 'Type name or village',
                     value: params[:query],
                     data: {
                      refresh_list_target: 'searchInput',
                    } %>
        <% end %>
